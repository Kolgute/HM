[32m+[m
[32m+[m[32m        public static void Compress(string sourceFile, string compressedFile)[m
[32m+[m[32m        {[m
[32m+[m[32m            // РїРѕС‚РѕРє РґР»СЏ С‡С‚РµРЅРёСЏ РёСЃС…РѕРґРЅРѕРіРѕ С„Р°Р№Р»Р°[m
[32m+[m[32m            using (FileStream sourceStream = new FileStream(sourceFile, FileMode.OpenOrCreate))[m
[32m+[m[32m            {[m
[32m+[m[32m                // РїРѕС‚РѕРє РґР»СЏ Р·Р°РїРёСЃРё СЃР¶Р°С‚РѕРіРѕ С„Р°Р№Р»Р°[m
[32m+[m[32m                using (FileStream targetStream = File.Create(compressedFile))[m
[32m+[m[32m                {[m
[32m+[m[32m                    // РїРѕС‚РѕРє Р°СЂС…РёРІР°С†РёРё[m
[32m+[m[32m                    using (GZipStream compressionStream = new GZipStream(targetStream, CompressionMode.Compress))[m
[32m+[m[32m                    {[m
[32m+[m[32m                        sourceStream.CopyTo(compressionStream); // РєРѕРїРёСЂСѓРµРј Р±Р°Р№С‚С‹ РёР· РѕРґРЅРѕРіРѕ РїРѕС‚РѕРєР° РІ РґСЂСѓРіРѕР№[m
[32m+[m[32m                        Console.WriteLine($"РЎР¶Р°С‚РёРµ С„Р°Р№Р»Р° {sourceFile} Р·Р°РІРµСЂС€РµРЅРѕ. \nРСЃС…РѕРґРЅС‹Р№ СЂР°Р·РјРµСЂ: {sourceStream.Length.ToString()}  \nСЃР¶Р°С‚С‹Р№ СЂР°Р·РјРµСЂ: {targetStream.Length.ToString()}.");[m
[32m+[m[32m                    }[m
[32m+[m[32m                }[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m        public static void Decompress(string compressedFile, string targetFile)[m
[32m+[m[32m        {[m
[32m+[m[32m            // РїРѕС‚РѕРє РґР»СЏ С‡С‚РµРЅРёСЏ РёР· СЃР¶Р°С‚РѕРіРѕ С„Р°Р№Р»Р°[m
