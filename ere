[32m+[m[32m                // РїРѕС‚РѕРє РґР»СЏ Р·Р°РїРёСЃРё РІРѕСЃСЃС‚Р°РЅРѕРІР»РµРЅРЅРѕРіРѕ С„Р°Р№Р»Р°[m
[32m+[m[32m                using (FileStream targetStream = File.Create(targetFile))[m
[32m+[m[32m                {[m
[32m+[m[32m                    // РїРѕС‚РѕРє СЂР°Р·Р°СЂС…РёРІР°С†РёРё[m
[32m+[m[32m                    using (GZipStream decompressionStream = new GZipStream(sourceStream, CompressionMode.Decompress))[m
[32m+[m[32m                    {[m
[32m+[m[32m                        decompressionStream.CopyTo(targetStream);[m
[32m+[m[32m                        Console.WriteLine($"Р’РѕСЃСЃС‚Р°РЅРѕРІР»РµРЅ С„Р°Р№Р»: {targetFile}");[m
[32m+[m[32m                    }[m
[32m+[m[32m                }[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
